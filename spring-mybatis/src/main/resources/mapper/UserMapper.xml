<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        SYSTEM
        "/Users/kevin/code/source_code/spring-5.3/spring-mybatis/src/main/resources/mybatis-3-mapper.dtd">

<mapper namespace="org.kevin.dao.UserMapper">

    <insert id="insert" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into user(username, age, `desc`)
        values (#{username}, #{age}, #{desc})
    </insert>

    <select id="getById" resultType="User" parameterType="Long">
        select *
        from user
        where id = #{id}
    </select>
</mapper>